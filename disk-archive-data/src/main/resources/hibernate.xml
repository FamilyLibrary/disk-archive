<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${driver.class.name}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.user}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="hibernateProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
	  <property name="properties">
	    <props>
			<prop key="hibernate.dialect">${hibernate.dialect}</prop>
			<prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.mode}</prop>
			<prop key="hibernate.show_sql">true</prop>
	    </props>
	  </property>
	</bean>

    <bean id="bookDao" class="com.alextim.bookshelf.dao.impl.BookDaoImpl">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <bean name="completeWorkDao" class="com.alextim.general.dao.impl.BasicDAO">
        <property name="sessionFactory" ref="sessionFactory" />
        <constructor-arg>
            <value>com.alextim.bookshelf.entity.CompleteWork</value>
        </constructor-arg>
    </bean>

    <bean name="bookAuthorDao" class="com.alextim.general.dao.impl.BasicDAO">
        <property name="sessionFactory" ref="sessionFactory" />
        <constructor-arg>
            <value>com.alextim.bookshelf.entity.BookAuthor</value>
        </constructor-arg>
    </bean>

	<bean id="filmDAO" class="com.alextim.diskarchive.dao.impl.FilmDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="filmGroupDAO" class="com.alextim.diskarchive.dao.impl.FilmGroupDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="seriesDAO" class="com.alextim.diskarchive.dao.impl.SeriesDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="authorDAO" class="com.alextim.diskarchive.dao.impl.AuthorDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="genericDAO" class="com.alextim.diskarchive.dao.impl.GenericDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="coreDAOFactory" class="com.alextim.diskarchive.dao.factory.impl.CoreDAOFactory">
		<property name="filmDAO" ref="filmDAO" />
		<property name="filmGroupDAO" ref="filmGroupDAO" />
		<property name="seriesDAO" ref="seriesDAO" />
		<property name="authorDAO" ref="authorDAO" />
		<property name="genericDAO" ref="genericDAO" />
	</bean>
</beans>
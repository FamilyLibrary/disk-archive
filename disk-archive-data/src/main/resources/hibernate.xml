	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name="url" value="jdbc:hsqldb:mem:diskarchive" />
		<property name="username" value="sa" />
		<property name="password" value="" />
	</bean>
    
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
				<value>com.alextim.diskarchive.entity.Film</value>
				<value>com.alextim.diskarchive.entity.FilmGroup</value>
				<value>com.alextim.diskarchive.entity.Series</value>
				<value>com.alextim.diskarchive.entity.Author</value>
				<value>com.alextim.diskarchive.entity.Actor</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>

	<bean id="filmDAO" class="com.alextim.diskarchive.dao.impl.FilmDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="filmGroupDAO" class="com.alextim.diskarchive.dao.impl.FilmGroupDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="seriesDAO" class="com.alextim.diskarchive.dao.impl.SeriesDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="authorDAO" class="com.alextim.diskarchive.dao.impl.AuthorDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="genericDAO" class="com.alextim.diskarchive.dao.impl.GenericDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="coreDAOFactory" class="com.alextim.diskarchive.dao.factory.impl.CoreDAOFactory">
		<property name="filmDAO" ref="filmDAO" />
		<property name="filmGroupDAO" ref="filmGroupDAO" />
		<property name="seriesDAO" ref="seriesDAO" />
		<property name="authorDAO" ref="authorDAO" />
		<property name="genericDAO" ref="genericDAO" />
	</bean>
</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--
	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
-->	
	<bean id="dataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
		<property name="url" value="jdbc:mysql://localhost/disk_archive" />
		<property name="user" value="root" />
		<property name="password" value="alextimus" />
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
				<value>com.alextim.diskarchive.entity.Film</value>
				<value>com.alextim.diskarchive.entity.FilmGroup</value>
				<value>com.alextim.diskarchive.entity.Series</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
			</props>
		</property>
	</bean>

	<bean id="filmDAO" class="com.alextim.diskarchive.dao.impl.FilmDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="filmGroupDAO" class="com.alextim.diskarchive.dao.impl.FilmGroupDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="seriesDAO" class="com.alextim.diskarchive.dao.impl.SeriesDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>

	<bean id="coreDAOFactory" class="com.alextim.diskarchive.dao.factory.CoreDAOFactory">
		<property name="filmDAO" ref="filmDAO"/>
		<property name="filmGroupDAO" ref="filmGroupDAO"/>
		<property name="seriesDAO" ref="seriesDAO"/>
	</bean>
	
</beans>
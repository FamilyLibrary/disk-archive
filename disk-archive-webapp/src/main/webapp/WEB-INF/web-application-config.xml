<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
     					http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- controllers -->
    <bean id="urlMapping"
        class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="login.html">indexController</prop>
                <prop key="main.html">indexController</prop>
                <prop key="renderGeneralImage.html">indexController</prop>
                <prop key="filmGroup.html">filmGroupController</prop>
            </props>
        </property>
    </bean>

    <bean id="internalPathMethodNameResolver"
        class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver">
        <property name="prefix" value="" />
    </bean>

    <bean id="indexController" class="com.alextim.diskarchive.controllers.IndexController">
        <property name="methodNameResolver" ref="internalPathMethodNameResolver" />

        <property name="filmService" ref="filmService" />
        <property name="filmGroupService" ref="filmGroupService" />
    </bean>

    <bean id="filmService"
        class="com.alextim.diskarchive.services.impl.FilmServiceImpl">
        <constructor-arg index="0" ref="coreDAOFactory" />
        <property name="jsonHelper" ref="jsonHelper" />
    </bean>
    <bean id="filmGroupService"
        class="com.alextim.diskarchive.services.impl.FilmGroupServiceImpl">
        <constructor-arg index="0" ref="coreDAOFactory" />
        <property name="jsonHelper" ref="jsonHelper" />
    </bean>

    <bean id="filmGroupController"
        class="com.alextim.diskarchive.controllers.FilmGroupController">
        <property name="filmGroupService" ref="filmGroupService" />
    </bean>

    <bean id="multipartResolver"
        class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="1000000" />
    </bean>

    <bean id="jsonHelper" class="com.alextim.diskarchive.utils.impl.JSONHelperImpl">
        <property name="coreDAOFactory" ref="coreDAOFactory" />
    </bean>
    
    <context:annotation-config/>
    <context:component-scan base-package="com.alextim.diskarchive"/>
</beans>
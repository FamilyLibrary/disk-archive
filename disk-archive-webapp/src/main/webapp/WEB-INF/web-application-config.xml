<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- controllers -->
	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="login.html">indexController</prop>
				<prop key="main.html">indexController</prop>
				<prop key="renderGeneralImage.html">indexController</prop>
				<prop key="uploadFile.html">fileUploadController</prop>
			</props>
		</property>
	</bean>

	<bean id="internalPathMethodNameResolver"
		class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver">
		<property name="prefix" value="" />
	</bean>

	<bean id="indexController" class="com.alextim.diskarchive.controllers.IndexController">
		<property name="methodNameResolver" ref="internalPathMethodNameResolver" />
		<property name="jsonView" ref="jsonView" />

		<constructor-arg index="0" ref="coreDAOFactory" />
	</bean>

	<bean id="fileUploadController" class="com.alextim.diskarchive.controllers.FileUploadController">
		<constructor-arg index="0" ref="coreDAOFactory" />
		<property name="formView" value="WEB-INF/jsp/uploadFile.jsp"/> 
	</bean>
	
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="1000000"/>
	</bean>

	<bean name="jsonView" class="org.springframework.web.servlet.view.json.JsonView">
		<property name="jsonWriter">
			<ref bean="jsonlibJsonWriter" />
		</property>
	</bean>

	<bean name="jsonlibJsonWriter"
		class="org.springframework.web.servlet.view.json.writer.jsonlib.JsonlibJsonStringWriter" />
</beans>